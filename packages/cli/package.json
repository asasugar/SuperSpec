{
  "name": "@superspec/cli",
  "version": "1.2.0",
  "description": "Spec-driven development for AI coding assistants",
  "type": "module",
  "bin": {
    "superspec": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "templates/",
    "prompts/"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asasugar/SuperSpec.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/asasugar/SuperSpec.git#readme",
  "bugs": {
    "url": "https://github.com/asasugar/SuperSpec.git/issues"
  },
  "keywords": [
    "spec",
    "sdd",
    "ai",
    "coding-assistant",
    "cursor",
    "claude",
    "copilot",
    "spec-driven-development"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "chalk": "^5.4.1"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0"
  }
}
